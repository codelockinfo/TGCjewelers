<section class="image_section">
  {%- render 'section_title',url:collection.url -%}
    <div class="celeb-container">   
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            {% if block.settings.sectionhead != blank %}
            {% endif %} 
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="" class="collection_img lazyload" loading="lazy">
            {% if block.settings.smallimg != blank %}
              <a href="{{block.settings.product.url }}">
              <div class="jewel_img_box">
                <img
                  src="{{ block.settings.smallimg | img_url: 'master' }}"
                  class="j_img lazyload"
                  alt=""
                  loading="lazy"
                >
              </div>
              </a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
</section>

