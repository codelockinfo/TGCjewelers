<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.1/css/swiper.min.css">
 <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.1/js/swiper.min.js"></script>
 <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>

<section class="image_section"> 
  <div class="width-container">
    <div class="swiper-container">
        <div class="heading_icons">
          <div class="collection_image">
            <h1 class="collection_slider_heading">{{ section.settings.main_title }}</h1>
            {% if section.settings.collection_logo != blank %}
              <img src="{{ section.settings.collection_logo | img_url: 'master' }}" alt="Our Collection" class="collection_logo">
            {% endif %}
          </div>
          <div class="next-prev-icons">
            <img src="https://img.icons8.com/?size=30&id=99996&format=png" class="button-prev">
            <img src="https://img.icons8.com/?size=30&id=99982&format=png" class="button-next">
          </div>
        </div>
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              {% if block.settings.img_heading_url %}
                <a href="{{ block.settings.img_heading_url }}">
                  <img src="{{ block.settings.slide_image | img_url: 'master' }}" alt="Rudraksh Mala" class="collection_img">
                </a>
              {% endif %}
              {% if block.settings.img_heading_url %}
                <a href="{{ block.settings.img_heading_url }}">
                  <span class="product_name">{{ block.settings.heading }}</span>
                </a>
              {% endif %}
            </div>
          {% endfor %}
        </div>
        <div class="next-prev-btn">
          <img src="https://img.icons8.com/?size=30&id=99996&format=png" class="button-prev">
          <img src="https://img.icons8.com/?size=30&id=99982&format=png" class="button-next">
        </div>
      </div>
  </div>
</section>   

{% schema %}
  {
    "name": "Custom Collection Slider",
    "class": "collection_sliders",
    "settings": [
      {
        "type": "text",
        "id": "main_title",
        "label": "Collection Heading"
      },
      {
        "type": "image_picker",
        "id": "collection_logo",
        "label": "Collection Logo"
      },
      {
        "type": "color",
        "id": "bgcolor",
        "label": " Section background color"
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          {
            "type": "image_picker",
            "id": "slide_image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Image Heading"
          },
          {
            "type": "url",
            "id": "img_heading_url",
            "label": "Img Heading URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Collection Slider"
      }
    ]
  }
{% endschema %}

<style>
  .collection_sliders .image_section{
    max-width: 100%;
    padding: 0px 100px;
    background-color: {{section.settings.bgcolor}};
  }

  .collection_sliders .collection_slider_heading{
    font-family: "Sorts Mill Goudy", serif !important;
    font-size: 60px;
    font-weight: 400;
    text-align: center;
    color: black;
  }

  .collection_sliders .collection_image{
    width: 100%;
    display: flex;
    flex-direction: column;
    height: 132.48px;
    align-items: center;
    justify-content: center;
  } 

  .collection_sliders .collection_logo{
    width: 84px;
    margin-top: 20px;
  }

  .collection_sliders .product_name{
    display: flex;
    justify-content: center;
    padding: 20px 0px 30px;
    font-size: 21px;
    font-weight: 700;
    text-transform: uppercase;
    color: black;    
    font-family: "Lato", sans-serif !important;
    transition: all 0.5s;
  }
 .collection_sliders .product_name:hover{
   color: #C48F40   ;
  }
  .collection_sliders .heading_icons{
    margin-bottom: 8px;
    text-align: center;
  }
    
  .collection_sliders .swiper-container {
    width: 100%;
    height: 100%;
    padding: 80px 0px 100px;
  }
    
  .collection_sliders .swiper-slide{
    display: flex;
    flex-direction: column;
  }

  .collection_sliders .collection_img{
    width: 100%;
    /* border-radius: 50% 50% 0% 0%; */
    height: auto;
  }

  .collection_sliders .button-next, .button-prev{
    width: 40px;
    height: 40px;
    border: 1px solid black;
    border-radius: 100%;
    margin: 4px;
    padding: 7px;
  }

  .collection_sliders .next-prev-icons{
    display: flex;
    width: 95%;
    margin-top: -34px;
    justify-content: end;
    margin-bottom: 40px;
  }

  /* .collection_sliders .btn-next, .btn-prev{
    width: 40px;
    height: 40px;   
    border: 1px solid black;
    border-radius: 100%;
    margin: 4px;
    padding: 7px;
  } */

  .collection_sliders .next-prev-btn{
    display: flex;
    justify-content: center;
  }

  .collection_sliders .swiper-wrapper{
    display: flex;
    flex-direction: row;
    transition-duration: 0ms;
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  @media (max-width:1440px){    
    .collection_sliders .image_section{
      padding: 0px 20px;
    }

    .collection_sliders .swiper-container{
      padding: 30px 0px;
    }

    .collection_sliders .product_name{
      font-size: 22px;
    }
  }

  @media (max-width: 1024px){
    .collection_sliders .product_name{
      font-size: 20px;
    }
  }

  @media (min-width:769px){
    .collection_sliders .next-prev-btn{
      display: none;
    }
  }

  @media (max-width:768px){
    .collection_sliders .collection_logo{
      width: 15%;
      margin-bottom: 20px;
    }
    
   .collection_sliders .next-prev-icons{
      display: none;
    }
    .collection_sliders .collection_slider_heading{
      font-size: 48px;
    }
    .collection_sliders .button-next, .button-prev{
    width: 30px;
    height: 30px;
    padding: 5px;
  }
  }

  @media (max-width:599px){
    .collection_sliders .collection_slider_heading{
      font-size: 36px;
    }
  }
  @media (max-width:425px){
    .collection_sliders .collection_logo{
      width: 20%;
    }

    .collection_sliders .product_name{
      width: 100%;
      font-size: 20px;
    }
  }

 
</style>

<script>
$(document).ready(function() {
    new Swiper('.swiper-container', {
        loop: true,
        nextButton: '.button-next',
        prevButton: '.button-prev',
        slidesPerView: 5.2,
        paginationClickable: true,
        spaceBetween: 15,
        breakpoints: {
            1920: {
                slidesPerView: 5.2,
                spaceBetween: 15
            },
            1028: {
                slidesPerView: 3.2,
                spaceBetween: 15
            },
            768: {
              slidesPerView: 2.2,
                spaceBetween: 15
            },
            425: {
                slidesPerView: 1.2,
                spaceBetween: 15
            }
        }
    });
});
</script>